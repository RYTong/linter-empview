{
  "name": "linter-empview",
  "main": "./lib/linter-empview",
  "version": "0.0.0",
  "description": "Lint EMP View on the fly.",
  "keywords": [
      "emp",
      "lint",
      "emplint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RYTong/linter-empview.git"
  },
  "bugs": {
    "url": "https://github.com/RYTong/linter-empview/issues"
  },

  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0 <2.0.0"
  },

  "package-deps": [
    "linter"
  ],

  "dependencies": {
      "atom-package-deps":"*",
      "sax": "^1.1.4"
  },

  "configSchema": {
    "enabledScopes": {
      "description": "List of scopes to run EMP Lint on, run `Editor: Log Cursor Scope` to determine the scopes for a file.",
      "type": "array",
      "default": [
        "source.emp"

      ],
      "items": {
        "type": "string"
      }
    }
  },

  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  }

}
